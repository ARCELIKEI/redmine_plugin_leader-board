<%= form_for @team_manager, :url => 'create' do |f| %>
    <div class="field">
    		<p><%= f.label l(:label_user) %> <br><%= select :team_manager, :user, options_for_select(@options), {}, {:multiple => false} %></p>
    </div>
    <div class="field">
    		<p><%= f.label l(:label_title) %> <br> <%= f.text_field :title, :required => :true %></p>
    </div>
    <div class="field">
        <p><%= f.submit l(:add_team_manager) %></p>
    </div>
<% end %>

<script type="text/javascript">
    $( "#user_name" ).autocomplete({
      source: <%= raw @users %>,
      select: function( event, ui ) {
      	$('#team_manager_user').val( ui.item.id);
      }
    });
</script>
